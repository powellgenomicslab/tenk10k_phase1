mkdir /share/ScratchGeneral/anncuo/tenk10k/data_processing/demuxafy/scdblfinder_output/${SAMPLE}

singularity exec --bind $BIND_PATH_DATA \
                --bind $BIND_PATH_OUTPUT \
                $SIF scDblFinder.R \
                -t $COUNTS \
                -o $SCDBLFINDER_OUTDIR 
                
